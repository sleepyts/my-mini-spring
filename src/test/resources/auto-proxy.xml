<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	         http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.springframework.org/schema/context
		 http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <bean id="worldService" class="com.sleepyts.springframework.services.WorldServiceImpl" proxy-target-class="true"/>

    <bean class="com.sleepyts.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>

    <bean id="pointcutAdvisor" class="com.sleepyts.springframework.aop.aspectj.AspectJExpressionPointcutAdvisor">
        <property name="expression"
                  value="@annotation(com.sleepyts.springframework.test.TestAnnotation)"/>
        <property name="advice" ref="generalInterceptor"/>
    </bean>

    <bean id="generalInterceptor" class="com.sleepyts.springframework.aop.GeneralInterceptor">
        <property name="beforeAdvice" ref="beforeAdvice"/>
    </bean>

    <bean id="beforeAdvice" class="com.sleepyts.springframework.interceptor.WorldServiceBeforeAdvice"/>


</beans>